<% include partials/_header %>
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">

<div class="container">
    <div class="top-acc">
        <h3 class="pull-left">Dispositivos, Electrodomesticos</h3>
        <button id="add_device" class="add_device btn btn-primary pull-right">
            <i class="fa fa-plus-circle"></i> Agregar dispositivo
        </button>
        <div class="clearfix"></div>
    </div>
    <div class="table-responsive">
        <table id="tbl-devices" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                    <td align="center">
                        <img src="<%= data[i].image %>" alt="image" style="width: 35px;">
                    </td>
                    <td align="center">
                        <%= data[i].id %>
                    </td>
                    <td>
                        <%= data[i].name %>
                    </td>

                    <td align="center">
                        <a href="/edit_device/<%= data[i].id %>" uid="<%= data[i].id %>" class="btn btn-primary btn-edit"><i
                                class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="/delete_device/<%= data[i].id %>" uid="<%= data[i].id %>" class="btn btn-danger btn-delete"><i
                                class="fa fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>

                <% } %>

            </tbody>
        </table>
    </div>

</div>
<input type="hidden" id="mode">
<input type="hidden" id="deviceid">
<!-- Modal -->
<div class="modal fade" id="deviceModal" tabindex="-1" role="dialog" aria-labelledby="deviceModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Dispositivo del sistema</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="txtName">Nombre</label>
                        <input type="text" class="form-control" id="txtName" placeholder="Nombre">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="txtImage">Url imagen</label>
                        <input type="url" class="form-control" id="txtImage" placeholder="Imagen, icono">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <img id="loading" src="/public/images/loading.gif" alt="cargando" style="display: none; width: 100px; height: 36px;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary btn-save">Guardar dispositivo</button>
            </div>
        </div>
    </div>
</div>

<% include partials/_footer %>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl-devices').DataTable({
            "order": [[1, "desc"]],
            "columnDefs": [
                { "width": "10%", "targets": 0 },
                { "width": "5%", "targets": 1 },
                { "width": "15%", "targets": 3 }
            ]
        });

        $('#add_device').click(function () {
            $('.modal-title').text('Crear nuevo dispositivo');
            $('#mode').val('1');
            $('#deviceModal').modal();
        });

        $('.btn-save').click(function () {
            var loader = $('#loading');
            var txtName = $('#txtName').val().trim();
            var txtImage = $('#txtImage').val().trim();

            var data = {
                name: txtName,
                image: txtImage
            }
            var mode = $('#mode').val();
            if (txtName == '' && txtImage == '') {
                alert('Debes completar todos los campos');
                return;
            }
            var url = '';
            if (mode == 1) { // Add
                url = '/add_device';
            } else if (mode == 2) { // Edit
                url = '/edit_device/' + $('#deviceid').val();
            }

            $.ajax({
                'url': url,
                'method': 'POST',
                'data': data,
                'dataType': 'json',
                success: function (response) {
                    loader.css('display', 'none');

                    if (response.deviceexist) {
                        alert(response.message);
                    } else {
                        $('#deviceModal').modal('hide');
                        location.reload();
                    }
                    console.log(response);
                },
                beforeSend: function () {
                    loader.css('display', 'block');
                },
                error: function (err) {
                    loader.css('display', 'none');
                    console.log(err);
                }
            });

        });

        $('.btn-delete').click(function (e) {
            e.preventDefault();
            var option = confirm("Seguro que quieres eliminar este dispositivo");
            if (option) {
                $.ajax({
                    'url': '/delete_device/' + $(this).attr('uid'),
                    'method': 'POST',
                    'dataType': 'json',
                    success: function (response) {
                        alert(response.message);
                        location.reload();
                    },
                    error: function (err) {
                        alert('Ocurrió un error por favor intente de nuevo');
                        console.log(err);
                    }
                });
            }
        });

        $('.btn-edit').click(function (e) {
            e.preventDefault();
            $('#mode').val(2);
            $('#deviceid').val($(this).attr('uid'));
            $('.modal-title').text('Editar dispositivo');
            $('#deviceModal').modal();

            $.ajax({
                'url': '/edit_device/' + $(this).attr('uid'),
                'method': 'GET',
                'dataType': 'json',
                success: function (response) {
                    var txtName = $('#txtName').val(response.data[0].name);
                    var txtImage = $('#txtImage').val(response.data[0].image);
                    console.log(response)
                },
                error: function (err) {
                    alert('Ocurrió un error por favor intente de nuevo');
                    console.log(err);
                }
            });

        });
    });

    $('#deviceModal').on('hidden.bs.modal', function () {
        var txtName = $('#txtName').val('');
        var txttxtImage = $('#txtImage').val('');
    });
</script>